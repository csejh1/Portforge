# =================================================================
# [App Settings]
# =================================================================
PROJECT_NAME="Portforge-Auth-Service"
ENV=local  # local, dev, staging, prod
DEBUG=True

# =================================================================
# [Database - MySQL/MariaDB]
# Auth Service 전용 스키마 사용
# =================================================================
DATABASE_URL=mysql+aiomysql://root:rootpassword@localhost:3306/portforge_auth

# =================================================================
# [AWS - DynamoDB & S3 (LocalStack/MinIO)]
# 로컬 개발 시에는 도커로 띄운 엔드포인트를 사용합니다.
# =================================================================
DDB_ENDPOINT_URL=http://localhost:8089
S3_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=admin
AWS_SECRET_ACCESS_KEY=password123
AWS_REGION=ap-northeast-2

# =================================================================
# [AWS Cognito] ⚠️ 필수 설정 - 팀장에게 실제 값을 받으세요!
# =================================================================
COGNITO_REGION=ap-northeast-2
# 아래 값들은 반드시 실제 Cognito 설정값으로 교체해야 합니다
COGNITO_USERPOOL_ID=ap-northeast-2_xxxxxxxxx
COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# =================================================================
# [Social Login Settings] ⚠️ 소셜 로그인 사용 시 필수
# =================================================================
# Cognito에서 만든 도메인 (https:// 포함, 끝에 슬래시 제외)
COGNITO_DOMAIN="https://your-cognito-domain.auth.ap-northeast-2.amazoncognito.com"
# 프론트엔드 주소 (Cognito에 등록한 콜백 URL과 100% 일치해야 함)
REDIRECT_URI="http://localhost:3000/"

# =================================================================
# [Frontend Environment Variables - React App]
# =================================================================
REACT_APP_COGNITO_DOMAIN="https://your-cognito-domain.auth.ap-northeast-2.amazoncognito.com"
REACT_APP_COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
REACT_APP_REDIRECT_URI="http://localhost:3000/"

# =================================================================
# [Frontend Environment Variables - Vite]
# =================================================================
VITE_COGNITO_DOMAIN="https://your-cognito-domain.auth.ap-northeast-2.amazoncognito.com"
VITE_COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
VITE_REDIRECT_URI="http://localhost:3000/"
