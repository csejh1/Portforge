# =================================================================
# [App Settings]
# =================================================================
PROJECT_NAME="Portforge-Team-Service"
ENV=local
DEBUG=True

# =================================================================
# [Database - MySQL/MariaDB]
# Team Service 전용 스키마 사용
# =================================================================
DATABASE_URL=mysql+aiomysql://root:rootpassword@localhost:3306/portforge_team

# =================================================================
# [JWT Settings]
# =================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =================================================================
# [AWS - DynamoDB & S3 (LocalStack/MinIO)]
# =================================================================
DDB_ENDPOINT_URL=http://localhost:8089
S3_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=admin
AWS_SECRET_ACCESS_KEY=password123
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=portforge-bucket

# =================================================================
# [DynamoDB Tables]
# =================================================================
DYNAMODB_TABLE_CHATS=team_chats
DYNAMODB_TABLE_ROOMS=chat_rooms

# =================================================================
# [AWS Cognito]
# =================================================================
COGNITO_REGION=ap-northeast-2
COGNITO_USERPOOL_ID=ap-northeast-2_xxxxxxxxx
COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx